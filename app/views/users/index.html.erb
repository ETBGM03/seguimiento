<!-- breadscrumbs -->
<% breadcrumb :users %>
<div class="row">
  <div class="w-100">
    <div class="ibox">
      <div class="ibox-title d-flex justify-content-between align-items-center pr-3 pb-3">
        <h3><strong>Listado de Aprendices</strong></h3>
        <div class="d-flex justify-content-between">
          <!-- convertir a excel el listado -->
          <div class="mr-4">
            <%= link_to admin_ambientes_path(format: :xlsx) do %>
              <img src="/assets/msexcel_svg.svg" alt="icono generar excel">
            <% end %>
          </div>
          <!-- caja de busqueda -->
          <form action="<%= users_path %>" method="GET" class="d-flex justify-content-between align-items-center">
            <div class="input-group">
              <input type="text" class="form-control" placeholder="Buscar.." aria-label="Recipient's username"
                aria-describedby="button-addon2" name="q" value="<%= @q %>">
              <div class="input-group-append">
                <button class="btn btn-primary" type="submit" id="button-addon2"><i
                    class="fa fa-search"></i></button>
              </div>
            </div>
          </form>
        </div>
      </div>
      <!-- listado usuarios -->
      <div class="ibox-content">
        <table class="table table-hover">
          <thead>
            <tr>
              <th class="text-center">Documento</th>
              <th class="text-center">Nombres</th>
              <th class="text-center">Apellidos</th>
              <th class="text-center">Ficha</th>
              <th class="text-center">Acci√≥n</th>
            </tr>
          </thead>
          <tbody>
            <%= render partial: "user", collection: @users %>
          </tbody>
        </table>
        <hr>
        <%= paginate @users, theme: 'twitter-bootstrap-4' %>
        <div class="row d-flex justify-content-between">
          <div class="col-md-4">
            <%= link_to "Volver", root_path, class: "btn btn-danger btn-lg btn-block" %>
          </div>
          <div class="col-md-4">
            <%= link_to 'Generar excel', users_path(format: :xlsx), class: "btn btn-primary btn-lg btn-block" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>