  <%= simple_form_for [@user, @anotacion] do |f| %>
  <div class="card-header">
    <div class="col-12 d-flex justify-content-between p-0">
      <div class="col-10 pl-0">
        <h4 class="card-subtitle">Creada por: <%= current_user.nombres %> </strong> </h4>
      </div>
      <div class="col-2 pr-0 text-right">
        <button class="btn pr-0"><i class="fa fa-chevron-up"></i> Cargar archivo</button>
      </div>
    </div>
  </div>
  <div class="card-body">
  <%= f.input :descripcion, class: "form-control" %>
<div class="row">
  <!-- botones -->
  <!-- Boton editar/crear anotacion -->
  <div class="col-md-6">
    <%= f.button :submit, class: "btn btn-primary btn-md btn-block" %>
      <% end %>
  </div>
  <!-- boton volver -->
  <div class="col-md-6">
    <%= link_to "volver", user_anotaciones_path, class: "btn btn-danger btn-md btn-block" %>
  </div>
</div>
</div>