<!-- breadcrumbs -->
<% breadcrumb :user_anotacion_new, @user%>
<div class="row">
  <div class="col-12 p-0 w-100">
    <div class="ibox content">
      <!-- datos user -->
      <div class="row">
        <div class="col-12">
          <div class="ibox-content d-flex justify-content-between">
            <!-- datos academicos -->
            <div class="col-md-6 d-flex flex-wrap p-3">
              <!-- foto perfil -->
              <div class="col-md-4 profile-image m-0">
                <img class="m-b-md" alt="User Image" src="/assets/default-user-img-01678e88fe462e7b0c878fa8a0357fa406e9ad71a9e058023bc6025ad3a9ebca.jpg">
              </div>
              <!-- datos  -->
              <div class="col-md-2 profile-info m-0">
                <h2 class="no-margins">
                  <%=  @user.nombres %>
                    <%=  @user.apellidos %>
                </h2>
                <h4>
                  <%=@user.ficha.programa.nombre %>
                </h4>
              </div>
            </div>
            <!-- otros datos del parendiz -->
            <div class="col-md-6 d-flex flex-wrap align-content-center">
              <table class="table">
                <tbody>
                  <tr>
                    <td>
                      <strong>Número de documento:</strong>
                      <%= @user.ndocumento %>
                    </td>
                    <td>
                      <strong>Teléfono:</strong>
                      <%= @user.telefono %>
                    </td>
                  </tr>
                  <tr>
                    <td>
                      <strong>E-mail:</strong>
                      <%= @user.email %>
                    </td>
                    <td>
                      <strong>Dirección:</strong>
                      <%= @user.direccion %>
                    </td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
      <!-- datos anotacion -->
      <div clas="row">
        <div class="col-12 p-0 mt-3">
          <!--title-->
          <div class="ibox-title">
            <h1 class="pl-4"><strong>Nueva anotación.</strong></h1>
          </div>
          <!--Anotacion -->
          <div class="ibox-content">
            <div class="info col-12">
              <div class="card border-secondar">
                <div class="card-header">
                  <div class="col-12 d-flex justify-content-between p-0">
                    <div class="col-10 pl-0">
                      <h4 class="card-subtitle">Creada por: <%= current_user.nombres%> </strong> </h4>
                    </div>
                    <div class="col-2 pr-0 text-right">
                      <button class="btn pr-0"><i class="fa fa-chevron-up"></i> Cargar archivo</button>
                    </div>
                  </div>
                </div>
                <div class="card-body">
                  <%= render partial: 'form_new' %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>