<!-- breadcrumbs -->
<%# breadcrumb :user_anotaciones, @user %>
<div class="row">
  <div class="w-100">
<!-- infor anotacion -->
    <div class="row">
      <div class="col-12 ">
        <div class="ibox-content d-flex justify-content-between ">
          <div class="col-md-12 d-flex flex-wrap">
          <h1>Datos anotacion</h1>
            <table class="table">
              <tbody>
                <tr>
                  <td>
                    <strong>ID Anotacion:</strong> <%= @anotacion.id %>
                  </td>
                  <td>
                    <strong>Fecha de creacion:</strong> <%= @anotacion.created_at %>
                  </td>
                </tr>
                <tr>
                  <td>
                    <strong>Creado por:</strong>
                  </td>
                  <td>
                    <strong>Descricion anotacion:</strong> <%= @anotacion.descripcion %>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
<!-- listado de los comentarios de la anotacion -->
    <div class="row mt-3">
      <div class="col-12">
        <div class="ibox-content d-flex justify-content-between">
          <div class="col-md-12 d-flex flex-wrap">
            <div class="col-8 p-0">
              <h1>Listado comentarios</h1>
            </div>
            <div class="col-4 p-0">
              <form action="<%#= user_anotaciones_path %>" method="GET" class="d-flex justify-content-between align-items-center">
                <div class="input-group">
                  <input type="text" class="form-control" placeholder="Buscar.." aria-label="Recipient's username"
                    aria-describedby="button-addon2" name="q" value="<%#= @q %>">
                  <div class="input-group-append">
                    <button class="btn btn-primary" type="submit" id="button-addon2"><i class="fa fa-search"></i></button>
                  </div>
                </div>
              </form>
            </div>
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Descripcion</th>
                  <th>Fecha de creacion</th>
                  <th class="text-center">Acci√≥n</th>
                </tr>
              </thead>
              <tbody>
                <%= render partial: "comentario", collection: @comentarios %>
              </tbody>
            </table>
            <!-- Paginacion -->
            <%= paginate @comentarios, theme: 'twitter-bootstrap-4' %>
            <hr class="w-100">
            <!-- Botones volver, nuevo comentario. -->
            <div class="w-100 mr-0 d-flex justify-content-between">
              <div class="col-3 pl-0">
                <%= link_to "Nuevo Comentario", new_anotacion_comentario_path, class: "btn btn-primary btn-block"  %>
              </div>
              <div class="col-3 pr-0">
                <%= link_to "Volver", users_path, class: "btn btn-danger btn-block"  %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>