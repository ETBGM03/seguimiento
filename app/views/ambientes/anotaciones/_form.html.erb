<%= simple_form_for [@ambiente, @anotacion] do |f| %>
  <div class="card-header">
      <div class="col-12 d-flex justify-content-between p-0">
        <div class="col-6 pl-0">
          <h4 class="card-subtitle">Creada por: <%= current_user.nombres %> </strong> </h4>
        </div>
        <div class="col-2 pr-0 d-flex justify-content-end">
          <label >
            <img src="/assets/upload_svg.svg" alt="icono eliminar">
            <label class="btn btn-primary p-1 m-0">
              Cargar archivo
              <span style="display:none;">
                <%= f.file_field :file %>
              </span>
            </label>
        </label>
        </div>
    </div>
  </div>
  <div class="card-body">
    <%= f.input :descripcion, class: "form-control" %>
    <div class="row">
    <!-- botones -->
    <!-- Boton editar anotacion -->
      <div class="col-md-6">
      <%= f.button :submit, class: "btn btn-primary btn-md btn-block" %>
      </div>
      <!-- boton volver -->
      <div class="col-md-6">
        <%= link_to "volver", ambiente_anotaciones_path(@ambiente), class: "btn btn-danger btn-md btn-block" %>
      </div>
    </div>
  </div>
<% end %>