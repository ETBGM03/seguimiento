<!-- breadcrumbs -->
<%# breadcrumb :ambientes %>
<div class="row">
    <div class="w-100">
        <div class="ibox">
            <div class="ibox-title d-flex justify-content-between align-items-center pr-3">
                <h5>Listado de Ambientes</h5>
                <form action="<%= ambientes_path %>" method="GET"
                    class="d-flex justify-content-between align-items-center">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Buscar.." aria-label="Recipient's username"
                            aria-describedby="button-addon2" name="q" value="<%= @q %>">
                        <div class="input-group-append">
                            <button class="btn btn-primary" type="submit" id="button-addon2"><i
                                    class="fa fa-search"></i></button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="ibox-content">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Nombre del Ambientes</th>
                            <th>Descripcion</th>
                            <th>Acci√≥n</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%= render @ambientes %>
                    </tbody>
                </table>
                <%= paginate @ambientes, theme: 'twitter-bootstrap-4' %>
                <hr />
            </div>
        </div>
    </div>
</div>