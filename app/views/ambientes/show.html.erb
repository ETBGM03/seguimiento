<!-- breadcrumbs -->
<% breadcrumb :ambiente_show, @ambiente%>
<div class="ibox mt-4 col-md-12 ">
  <div class="ibox-title">
    <h1>Informacion del ambiente</h1>
  </div>
  <div class="ibox-content ">
    <div class="info col-md-3 mx-auto">
      <div class="card text-white bg-primary">
        <%=image_tag 'default-user-img.jpg', class: "m-b-md", alt: "User Image"%>
        <div class="card-body">
          <h4 class="card-title">ID: <%= @ambiente.id%> </h4>
          <h4 class="card-title">Nombre: <%= @ambiente.nombre%></h4>
          <p class="card-text"><%= @ambiente.descripcion%>></p>
        </div>
      </div>
    </div>
    <hr>
    <div class="row">
      <div class="col-md-6">
        <%= link_to "volver", ambientes_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>