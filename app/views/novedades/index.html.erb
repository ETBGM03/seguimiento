                <table class="table">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Titulo</th>
                        <th>Descripcion</th>
                    </tr>
                    </thead>
                    <tbody >
                      <% @novedades.each do |novedad| %>
                        <tr>
                          <td> <%= link_to novedad.id, novedad_path(novedad) %> </td>
                          <td><%= novedad.titulo %></td>
                          <td><%= novedad.descripcion %></td>
                        </tr>
                    <% end %>
                </table>
            </div>
