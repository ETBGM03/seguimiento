<h1 class="text-center mov-naranja">Formulario de  <strong>Registro</strong></h1>
<br>
<div class="container_new_registration">
  <div class="container_columnas">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <%= f.input :nombre,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "nombre" }%>
    <%= f.input :apellido,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "apellido" }%>
    <%= f.input :documento,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "documento" }%>
    <%= f.input :telefono,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "telefono" }%>
   <%= f.input :direccion,
               required: true,
               autofocus: true,
               input_html: { autocomplete: "direccion" }%>
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" }%>
    <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password" } %>
        <center>
          <div class="col-md-8">
            <%= f.button :submit, "Crear usuario", class: "btn-primary block full-width m-b" %>
            <%= render "devise/shared/links" %>
            <br>
            <br>
          </div>
        </center>

    <% end %>
  </div>
</div>

<br>
